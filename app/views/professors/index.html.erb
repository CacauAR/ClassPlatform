<p id="notice"><%= notice %></p>

<h1>Professors</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Registry</th>
      <th>Name</th>
      <th>Email</th>   
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= image_tag(professor.image, size:"50x50") %></td>
        <td><%= professor.registry %></td>
        <td><%= professor.name %></td>
        <td><%= professor.email %></td>    
        <td><%= professor.course.name %></td>    
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

